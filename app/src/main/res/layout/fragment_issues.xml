<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:name="com.ocs.gitissues.IssuesListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".issues_list.IssuesListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvIssuesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_margin"
            android:layout_marginBottom="@dimen/space_margin"
            android:layout_marginLeft="@dimen/space_margin"
            android:layout_marginRight="@dimen/space_margin"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pbIssuesList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:layout_margin="@dimen/space_margin"
            android:layout_centerInParent="true"
             />
    </RelativeLayout>
</layout>